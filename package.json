{
  "name": "norwa-africa",
  "version": "1.0.0",
  "description": "water-theme",
  "main": "index.js",
  "scripts": {
    "watch-sass": "node-sass sass/main.scss style/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch-sass",

    "compile-sass": "node-sass sass/main.scss style/style.comp.css",
    "concat:css": "concat -o style/style.concat.css style/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' style/style.concat.css -o style/style.prefix.css ",
    "compress:css": "node-sass style/style.prefix.css style/style.min.css --output-style compressed",
    "build": "npm-run-all compile-sass concat:css prefix:css compress:css"
  },
  "author": "DevArtist254",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}